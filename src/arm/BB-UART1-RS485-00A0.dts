/dts-v1/;
/plugin/;

#include <dt-bindings/board/am335x-bbw-bbb-base.h>
#include <dt-bindings/pinctrl/am33xx.h>

/ {
    compatible = "ti,beaglebone", "ti,beaglebone-black", "ti,beaglebone-green";

    // identification
    part-number = "BB-UART1-RS485";
    version = "00A0";

    // resources this cape uses
    exclusive-use =
        "P9.24",        // uart1_txd
        "P9.26",        // uart1_rxd
        "P9.14",        // gpio1[18]
        "gpio1_18",     //
        "uart1";        // hardware ip used

    fragment@0 {
        target = <&am33xx_pinmux>;
        __overlay__ {
            bb_uart1_rs485_pins: pinmux_bb_uart1_rs485_pins {
                pinctrl-single,pins = <
                    BONE_P9_24 (PIN_OUTPUT | MUX_MODE0) // uart1_txd.uart1_txd
                    BONE_P9_26 (PIN_INPUT | MUX_MODE0)  // uart1_rxd.uart1_rxd
                    BONE_P9_14 0x07 /* PIN_OUTPUT | MUX_MODE7 (GPIO1_18) */                 
                >;
            };
        };
    };

    fragment@1 {
        target = <&uart1>;
        __overlay__ {
            status = "okay";
            pinctrl-names = "default";
            pinctrl-0 = <&bb_uart1_rs485_pins>;
            rs485-rts-delay = <0 0>;

            rts-gpio = <&gpio1 18 0>; /*  GPIO_ACTIVE_HIGH>; */
            linux,rs485-enabled-at-boot-time;
        };
    };
};
